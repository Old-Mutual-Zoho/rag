# Project Settings
PROJECT_NAME="Old Mutual Zoho RAG"
ENVIRONMENT=development
LOG_LEVEL=INFO

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# Pinecone
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=old-mutual-products

# Elasticsearch
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your_password

# Zoho API
ZOHO_CLIENT_ID=your_zoho_client_id
ZOHO_CLIENT_SECRET=your_zoho_client_secret
ZOHO_REFRESH_TOKEN=your_refresh_token
ZOHO_REGION=com
ZOHO_DESK_ORG_ID=your_org_id

# Partner API integrations
# INTEGRATIONS_MODE=real to force real APIs, mock to force mocks.
# If not set, app auto-selects real mode when partner URLs are provided.
INTEGRATIONS_MODE=mock
PARTNER_UNDERWRITING_API_URL=
PARTNER_UNDERWRITING_API_KEY=
PARTNER_QUOTATION_API_URL=
PARTNER_QUOTATION_API_KEY=
PARTNER_PAYMENT_API_URL=
PARTNER_PAYMENT_API_KEY=
PARTNER_PAYMENT_INITIATE_PATH=/payments/initiate

# Postgres container credentials (used by docker-compose)
POSTGRES_DB=rag
POSTGRES_USER=rag_user
POSTGRES_PASSWORD=change_me

# Database URL consumed by app/alembic
DATABASE_URL=postgresql://rag_user:change_me@postgres:5432/rag

# Use real Postgres for conversations/sessions when set to true (requires DATABASE_URL)
USE_POSTGRES_CONVERSATIONS=true

# When true, startup skips create_tables() and expects Alembic migrations.
USE_ALEMBIC_MIGRATIONS=true

# Redis for session cache
REDIS_URL=redis://redis:6379/0

# Qdrant vector database
QDRANT_URL=http://qdrant:6333

# Scraping
SCRAPING_DELAY=2
MAX_RETRIES=3
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# RAG Configuration
CHUNK_SIZE=768
CHUNK_OVERLAP=100
TOP_K_RETRIEVAL=20
TOP_K_RERANK=5
DENSE_WEIGHT=0.6
SPARSE_WEIGHT=0.4
CONFIDENCE_THRESHOLD_HIGH=0.85
CONFIDENCE_THRESHOLD_LOW=0.65

# Monitoring
SENTRY_DSN=your_sentry_dsn
PROMETHEUS_PORT=9090
